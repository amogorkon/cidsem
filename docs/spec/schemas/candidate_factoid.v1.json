{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/schemas/candidate_factoid.v1.json",
  "title": "CandidateFactoid v1",
  "type": "object",
  "required": ["factoid_id","factoid_text","predicate_candidates","provenance"],
  "properties": {
    "factoid_id": {"type":"string"},
    "factoid_text": {"type":"string"},
    "subject_raw": {"type":"string"},
    "object_raw": {"type":"string"},
    "predicate_candidates": {
      "type":"array",
      "items": {"type":"object","required":["predicate_cid","score"],"properties":{"predicate_cid":{"type":"string"},"score":{"type":"number","minimum":0,"maximum":1}}}
    },
    "confidence": {"type":"number","minimum":0,"maximum":1},
    "modality": {"type":"string"},
    "time_scope": {"oneOf":[{"type":"null"},{"type":"object"}]},
    "provenance": {"type":"object"},
    "normalizations": {"type":"object"}
  },
  "additionalProperties": false
}
