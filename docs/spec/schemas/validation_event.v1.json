{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/schemas/validation_event.v1.json",
  "title": "ValidationEvent v1",
  "type": "object",
  "required": ["event_id","factoid_id","responder_id","response","timestamp"],
  "properties": {
    "event_id": {"type":"string"},
    "factoid_id": {"type":"string"},
    "responder_id": {"type":"string"},
    "response": {"type":"string","enum":["confirmed","rejected","abstain"]},
    "timestamp": {"type":"string","format":"date-time"},
    "bot_id": {"type":"string"},
    "prompt_hash": {"type":"string"},
    "model_version": {"type":"string"}
  },
  "additionalProperties": false
}
